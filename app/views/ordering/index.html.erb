<div class="orders index">
  <h2>Drinks to Make</h2>

  <%= link_to("Add New Order", new_ordering_path, :class => 'action new') %>

  <table class="listing" summary="Order list">
    <tr class="header">
      <th>Drink Name</th>
      <th>Size</th>
      <th>Extra Espresso Goodness</th>
      <th>Milk</th>
      <th>Flavortown</th>
      <th>Decaf?</th>
    </tr>
    <% @orders.sent.each do |order| %>
    <tr>
      <td><%= order.item_name %></td>
      <td><%= order.size %></td>
      <td><%= order.extraEspressoShots %></td>
      <td><%= order.milkType %></td>
      <td><%= order.flavor %></td>
      <td class="center"><%= order.decaf ? 'Yes' : 'No' %></td>
      <td class="actions">
        <%= link_to("Show", '#', :class => 'action show') %>
        <%= link_to("Edit", '#', :class => 'action edit') %>
        <%= link_to("Delete", '#', :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
