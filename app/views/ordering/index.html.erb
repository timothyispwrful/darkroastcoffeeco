<div class="orders index">
  <div class="main-container">
    <h2>Drinks Submitted to Store</h2>
  </div>
  <div class="main-container">
    <% if !@sentOrder.any? %>
      <p>No drinks here!  Why don't you <%= link_to "order one to get started? :)", new_ordering_path, :class => 'action new', :method => :get %></p>
    <% else %>
      <% @sentOrder.each do |order| %>
        <div class="card">
          <img src=
        <% case order.item_name %>
          <% when "Coffee" %>
            <%= asset_path('coffee_raw.jpg') %> alt="Cortado" style="width:100%">
          <% when "Americano" %>
          <%= asset_path('americano_raw.jpg') %> alt="Cortado" style="width:100%">
          <% when "Latte" %>
          <%= asset_path('latte_raw.jpg') %> alt="Cortado" style="width:100%">
          <% when "Cortado" %>
          <%= asset_path('cortado_raw.jpg') %> alt="Cortado" style="width:100%">
          <% when "Cappuccino" %>
          <%= asset_path('cappuccino_raw.jpg') %> alt="Cortado" style="width:100%">
          <% when "Mocha" %>
          <%= asset_path('mocha_raw.jpg') %> alt="Cortado" style="width:100%">
          <% when "Cold Brew" %>
          <%= asset_path('coldbrew_raw.jpg') %> alt="Cortado" style="width:100%">
        <% else %>
          <%= asset_path('coldbrew_raw.jpg') %> alt="Cortado" style="width:100%">
        <% end %>
        <div class="container">
          <h3><%= order.item_name %></h3>
          <p>
            <% case order.size %>
            <% when 1 %>
            <%= "Small" %>
            <% when 2 %>
            <%= "Medium" %>
            <% when 3 %>
            <%= "Large" %>
            <% when 4 %>
            <%= "Massive" %>
          <% end %>
        </p>
        <% if order.extraEspressoShots > 1 %>
          <p>
            <%= "#{order.extraEspressoShots} Extra Shots" %>
          </p>
        <% elsif order.extraEspressoShots == 1 %>
          <p>
            <%= "#{order.extraEspressoShots} Extra Shot" %>
          </p>
        <% else %>
        <% end %>
        <p>
          <% case order.milkType %>
          <% when "None" %>
          <%= "No Milk" %>
          <% when "Heavy Cream"%>
          <%= order.milkType %>
        <% else %>
          <%= "#{order.milkType} Milk"%>
        <% end %>
      </p>
      <% if order.flavor != "" %>
        <p>
          <%= order.flavor %>
        </p>
      <% end %>
      <% if order.decaf %>
        <p>
          <%= "Decaf" %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
<% end %>
</div>
