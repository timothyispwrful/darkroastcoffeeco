<div class="orders index">
  
  <%= link_to "Let's Start A New Order!", new_ordering_path, :class => 'action new' %>

  <h2>Drinks Submitted to Store</h2>
  <table class="listing" summary="Order list">
    <tr class="header">
      <th>Drink Name</th>
      <th>Size</th>
      <th>Extra Espresso Shots</th>
      <th>Milk</th>
      <th>Additional Flavors</th>
      <th>Decaf?</th>
    </tr>
    <% @sentOrder.each do |order| %>
    <tr>
      <td><%= order.item_name %></td>
      <td><%= order.size %></td>
      <td><%= order.extraEspressoShots %></td>
      <td><%= order.milkType %></td>
      <td><%= order.flavor %></td>
      <td class="center"><%= order.decaf ? 'Yes' : 'No' %></td>
    </tr>
    <% end %>
  </table>
<br />
<br />

  <h2>Drinks In Progress</h2>
    <table class="listing" summary="Order list">
    <tr class="header">
      <th>Drink Name</th>
      <th>Size</th>
      <th>Extra Espresso Shots</th>
      <th>Milk</th>
      <th>Additional Flavors</th>
      <th>Decaf?</th>
    </tr>
    <% @acceptedOrder.each do |order| %>
    <tr>
      <td><%= order.item_name %></td>
      <td><%= order.size %></td>
      <td><%= order.extraEspressoShots %></td>
      <td><%= order.milkType %></td>
      <td><%= order.flavor %></td>
      <td class="center"><%= order.decaf ? 'Yes' : 'No' %></td>
    </tr>
    <% end %>
  </table>

<br />
<br />

  <h2>Completed Orders</h2>
    <table class="listing" summary="Order list">
    <tr class="header">
      <th>Drink Name</th>
      <th>Size</th>
      <th>Extra Espresso Shots</th>
      <th>Milk</th>
      <th>Additional Flavors</th>
      <th>Decaf?</th>
    </tr>
    <% @readyOrder.each do |order| %>
    <tr>
      <td><%= order.item_name %></td>
      <td><%= order.size %></td>
      <td><%= order.extraEspressoShots %></td>
      <td><%= order.milkType %></td>
      <td><%= order.flavor %></td>
      <td class="center"><%= order.decaf ? 'Yes' : 'No' %></td>
      <td class="actions">
      <%= button_to "Remove from List", {:action => 'delete', :id => order.id} %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
